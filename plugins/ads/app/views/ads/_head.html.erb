<%- if Ads::Setting.google_analytics_enabled and
       (!(Ads::Setting.google_analytics_id.empty?)) -%>
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
  ga('create', '<%= Ads::Setting.google_analytics_id %>', 'auto');
  ga('send', 'pageview');
</script>
<%- end -%>

<%- if Ads::Setting.google_adsense_enabled -%>
<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js">
</script>
<%- google_ad = Ads::Ad.google_ad -%>
<script>
  (adsbygoogle = window.adsbygoogle || []).push({
    google_ad_client: "<%= google_ad[:client_id] %>",
    enable_page_level_ads: true
  });
</script>
<%- end -%>

<%- if Ads::Setting.infolinks_enabled -%>
<%- infolinks_ad = Ads::Ad.infolinks_ad -%>
<script type="text/javascript">
  var infolinks_pid = <%= infolinks_ad[:pid] %>;
  var infolinks_wsid = <%= infolinks_ad[:wsid] %>;
</script>
<script type="text/javascript" src="//resources.infolinks.com/js/infolinks_main.js">
</script>
<%- end -%>
