<fieldset>
  <legend><%= l(:label_setting_google_adsense) %></legend>

  <p>
    <label><%= l(:label_enabled) %>:</label>
    <%= hidden_field_tag('settings[google_adsense_enabled]', 0) %>
    <%= check_box_tag('settings[google_adsense_enabled]', 1,
                      Ads::Setting.google_adsense_enabled, :autofocus => 'autofocus') %>
  </p>

  <p>
    <label><%= l(:label_setting_google_adsense_client_id) %>:</label>
    <%= text_field_tag('settings[google_adsense_client_id]',
                       Ads::Setting.google_adsense_client_id,
                       :size => 30) %>
  </p>

  <p>
    <label><%= l(:label_setting_google_adsense_ad_id) %>:</label>
    <%= text_field_tag('settings[google_adsense_sidebar_ad_id]',
                       Ads::Setting.google_adsense_sidebar_ad_id) %>
  </p>
</fieldset>

