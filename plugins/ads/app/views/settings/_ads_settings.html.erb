<fieldset>
  <legend><%= l(:label_setting_ads_plugin_support) %></legend>

  <p>
    <label><%= l(:label_setting_how_much_support) %>:</label>
    <%= range_field_tag('settings[plugin_support_chance]',
                        Ads::Setting.plugin_support_chance,
                        {:min => Ads::Setting.plugin_support_chance(:min),
                         :max => Ads::Setting.plugin_support_chance(:max),
                         :onchange => "chance.value = this.value;"}) %>
    <em>
      <%= raw(l(:label_setting_plugin_support_explanation,
                :chance => "<output id=\"chance\">#{Ads::Setting.plugin_support_chance}</output>")) %>
    </em>
  </p>

</fieldset>
