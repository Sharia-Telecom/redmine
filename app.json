{
  "name": "Redmine 3.4.2 on Heroku",
  "description": "The Redmine 3.4.2 project management application with tens of built-in plugins, made deployable to Heroku.",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate"
  },
  "env": {
    "DOMAIN": {
      "required": true
    },
    "ENCRYPTION_ALG": {
      "required": true
    },
    "ENCRYPTION_KEY": {
      "required": true
    },
    "GOOGLE_CLIENT_ID": {
      "required": true
    },
    "GOOGLE_CLIENT_SECRET": {
      "required": true
    },
    "S3_ACCESS_KEY_ID": {
      "required": true
    },
    "S3_BUCKET_NAME": {
      "required": true
    },
    "S3_ENDPOINT_DOMAIN": {
      "required": true
    },
    "S3_SECRET_ACCESS_KEY": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "SECRET_KEY_BASE_DEVEL": {
      "required": true
    },
    "SECRET_KEY_BASE_TEST": {
      "required": true
    },
    "SENDGRID_API_KEY": {
      "required": true
    },
    "SENDGRID_PASSWORD": {
      "required": true
    },
    "SENDGRID_PORT": {
      "required": true
    },
    "SENDGRID_SSL": {
      "required": true
    },
    "SENDGRID_TLS": {
      "required": true
    },
    "SENDGRID_USERNAME": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    "heroku-postgresql",
    "scheduler",
    "sendgrid"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    },
    {
      "url": "https://github.com/stomita/heroku-buildpack-phantomjs"
    }
  ]
}
